<div class="page-wrapper">
  <div class="page-content--bge5">
    <div class="container">
      <div class="login-wrap">
        <div class="login-content">
          <div class="login-logo">
            <%= link_to  image_tag("logo_register.png"), root_path %>
          </div>
          <div class="login-form">
            <%= form_for(:session, url: login_path) do |f| %>
            <div class="form-group">
              <%=f.label :email, "Email" %>
              <%= f.text_field :email, class:"au-input au-input--full", placeholder:"Email" %>
            </div>
            <div class="form-group">
              <%= f.label :password, "Password" %>
              <%= f.password_field :password, class:"au-input au-input--full", placeholder:"Password" %>
            </div>
            <div class="login-checkbox">
              <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>Remember me </span>
              <% end %>
              <label>
                <a href="#">Forgotten Password?</a>
              </label>
            </div>
            <%= f.submit "Log In", class:"au-btn au-btn--block au-btn--green m-b-20" %>
            <% end %>
            <div class="register-link">
              <p>
                Don't you have account?
                <%= link_to  "Register here", register_path %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>