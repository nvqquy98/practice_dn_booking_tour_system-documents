 <div class="login-form">
   <%= form_for(@user) do |f| %>
   <%= render 'shared/error_messages', object: f.object %>
   <div class="form-group">
     <%= f.label :name %>
     <%= f.text_field :name, class:" form-control au-input au-input--full", placeholder:"Username"%>
   </div>
   <% if @user  %>
   <%= hidden_field_tag :email %>
   <div class="form-group">
     <%= f.label :address %>
     <%= f.text_field :address ,class:" form-control au-input au-input--full", placeholder:"Address"%>
   </div>
   <div class="form-group">
     <%= f.label :phone_number %>
     <%= f.text_field :phone_number ,class:" form-control au-input au-input--full", placeholder:"Phone Number"%>
   </div>
   <% else %>
   <div class="form-group">
     <%= f.label :email %>
     <%= f.text_field :email ,class:" form-control au-input au-input--full", placeholder:"Email"%>
   </div>
   <% end %>
   <div class="form-group">
     <%= f.label :password %>
     <%= f.password_field :password ,class:" form-control au-input au-input--full", placeholder:"Password" %>
   </div>
   <div class="form-group">
     <%= f.label :password_confirmation %>
     <%= f.password_field :password_confirmation ,class:" form-control au-input au-input--full", placeholder:"Password Confirmation" %>
   </div>
   <%= f.submit yield(:button_text), class:" form-control au-btn au-btn--block au-btn--green m-b-20" %>
   <% end %>
 </div>